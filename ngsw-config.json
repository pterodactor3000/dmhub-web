{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "lazy",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/**",
          "/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "longCacheHttpResponses",
      "urls": [
        "**/*type=attribute*",
        "**/*type=background*",
        "**/*type=charactertype*",
        "**/*type=class*",
        "**/*type=condition*",
        "**/*type=currency*",
        "**/*type=damagetype*",
        "**/*type=equipmentcategory*",
        "**/*type=feat*",
        "**/*type=globalrule*",
        "**/*type=image*",
        "**/*type=item*",
        "**/*type=language*",
        "**/*type=objects*",
        "**/*type=ongoingeffect*",
        "**/*type=party*",
        "**/*type=race*",
        "**/*type=resource*",
        "**/*type=skill*",
        "**/*type=spell*",
        "**/*type=subclass*",
        "**/*type=subrace*"
      ],
      "cacheConfig": {
        "maxAge": "7d",
        "maxSize": 100,
        "strategy": "performance"
      }
    },
    {
      "name": "shortCacheHttpResponses",
      "urls": ["**/*type=character*"],
      "cacheConfig": {
        "maxAge": "2d",
        "maxSize": 100,
        "strategy": "freshness",
        "timeout": "5s"
      }
    }
  ]
}
